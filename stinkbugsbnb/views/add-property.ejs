<body style="background-color: #3399ff; font-family: 'Amita'">
  <div style="width: 100%;">
  <%- include ./partials/_navbar.ejs %>
</div>
  <div style="text-align: center; padding: 30px;"></div>
  <div style="background-color: #e6f9ff; margin: auto; width: 50%; border: 3px solid blue; padding: 50px;">
  <form class="form-horizontal" action="/" method="post" id="add_property-form">

  <div class="form-group">
    <label>Property Name:</label>
    <input type="text" class="form-control" name="property_name">
  </div>

  <div class="form-group">
    <label>Price Per Night (Â£):</label>
      <input type="number" class="form-control" name="price_per_night" value=""><br>
  </div>

  <div class="form-group">
    <label>Property Specs:</label>
  </div>

  <div style="width: 80%; padding-left: 50px; padding-top: 0px;">
    <label>Guests:</label>
      <input type="number" class="form-control" name="guests" value=""><br>

    <label>Bedrooms:</label>
      <input type="number" class="form-control" name="bedrooms" value=""><br>
    <label>Beds:</label>
      <input type="number" class="form-control" name="beds" value=""><br>
