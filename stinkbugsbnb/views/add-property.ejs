      <input type="text" class="form-control" name="location" value=""><br>
  </div>

  <div class="form-group">
    <label>Detailed Description:</label>
    <textarea rows="4" class="form-control" name="detailed_description"></textarea>
  </div>

  <div class="form-group">
    <label>Date Available:</label>
    <input type="date" class="form-control" name="date_available">
  </div>

  <div class="form-group">
    <label>Available Until:</label>
    <input type="date" class="form-control" name="available_until">
